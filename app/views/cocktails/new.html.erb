



<div class='container'
  <div class="col-xs-6 col-sm-3">
    <h2 class='text-center bigEntrance'>Name your <strong>NEW</strong> cocktail here</h2>

    <div class='text-center wrapper'>
      <div class='text-center hatch'>
        <%= simple_form_for @cocktail do |c| %>
          <%= c.error_notification %>
          <%= c.input :name %><br>

          <div class='btn btn-primary' >
            <%= c.button :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


